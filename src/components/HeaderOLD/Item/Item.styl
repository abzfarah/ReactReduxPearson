@import '../styles/base'

.item
  float left

.link
  color currentColor
  cursor pointer
  padding 15px
  position relative
  text-decoration none
  font-size 14px
  padding 20px 15px

.item-caret
  display none
  display inline-block
  font-size 10px
  margin-left 6px
  position relative
  bottom 2px

.dropdown-caret
  display inline-block
  height 12px
  left 50%
  margin-top 0
  overflow hidden
  position absolute
  text-align center
  top 37px
  transform translateX(-50%)
  transition margin-top .2s
  width 20px
  z-index 1100

  &:after
    background-color white
    border 1px solid rgba(black, .1)
    content ''
    display inline-block
    height 12px
    opacity 0
    transform rotate(45deg)
    transition visibility 0s .2s, opacity .2s
    visibility hidden
    width 12px
