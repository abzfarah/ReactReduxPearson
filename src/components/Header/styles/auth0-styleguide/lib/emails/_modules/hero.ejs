<mj-section background-color="#222228">
  <mj-column width="80%" vertical-align="top">
    <% if (locals.image) { %>
    <mj-image width="80" src="<%- locals.image %>" alt="Zero To Launch" padding-top="30px"></mj-image>
    <% } %>

    <% if (locals.title) { %>
    <mj-text font-size="32px" line-height="60" color="white" padding="0 20px 0 20px" margin="0">
      <%- locals.title %>
    </mj-text>
    <% } %>

    <% if (locals.smallTitle) { %>
    <mj-text color="white" font-size="20px" padding="0 20px 30px 20px">
      <%- locals.smallTitle %>
    </mj-text>
    <% } %>

    <% if (locals.subtitle) { %>
    <mj-text color="#B6B6B8" padding="0 20px 30px 20px">
      <%- locals.subtitle %>
    </mj-text>
    <% } %>

  </mj-column>
</mj-section>
